<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="personByName" class="com.luxoft.springioc.lab1.model.UsualPerson" autowire="byName">
        <constructor-arg name="name" value="John Smith"/>
        <constructor-arg name="age" value="35"/>
    </bean>

    <bean id="personByType" class="com.luxoft.springioc.lab1.model.UsualPerson" autowire="byType">
        <constructor-arg name="name" value="John Smith"/>
        <constructor-arg name="age" value="35"/>
    </bean>

    <bean id="personByConstructor" class="com.luxoft.springioc.lab1.model.UsualPerson" autowire="constructor">
        <constructor-arg name="name" value="John Smith"/>
        <constructor-arg name="age" value="35"/>
    </bean>

    <bean id="personFullConstructor" class="com.luxoft.springioc.lab1.model.UsualPerson">
        <constructor-arg name="name" value="John Smith"/>
        <constructor-arg name="age" value="35"/>
        <constructor-arg name="country" ref="country"/>
    </bean>

    <bean id="person" class="com.luxoft.springioc.lab1.model.UsualPerson">
        <property name="name" value="John Smith"/>
        <property name="age" value="35"/>
        <property name="country" ref="country"/>
    </bean>

    <bean id="country" class="com.luxoft.springioc.lab1.model.Country" autowire="byType">
        <constructor-arg name="id" value="1"/>
        <constructor-arg name="name" value="Russia"/>
        <constructor-arg name="codeName" value="RU"/>
        <!--<property name="a" ref="a" />-->
    </bean>

    <bean id="a" class="com.luxoft.springioc.lab1.model.A"/>

    <!--    commented to be able to autowire by type-->
